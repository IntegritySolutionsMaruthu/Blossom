<div id="horizon" >
  <div id="container">  
    <div id="login_panel">
      <%= link_to 'sign up',  new_user_registration_path, :id=> "sign_up" %> 
      <h1>Login to your account </h1>
      <%= form_for(resource_name, resource, :url => session_path(resource_name), :html => {:id=>'xxx'}) do |f| %>
      
        <p><%= f.label :email, :id=>"user_email_label" %>
          <%= f.text_field :email %>
        </p>

        <p><%= f.label :password, :id=>"user_password_label"  %>
          <%= f.password_field :password %>
        </p>

        <% if devise_mapping.rememberable? -%>
          <p id="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %> <%= f.submit "Sign in" %> </p>
        <% end -%>

      <% end %>

<%#= render :partial => "devise/shared/links" %>

    </div>
  </div>   
</div>
